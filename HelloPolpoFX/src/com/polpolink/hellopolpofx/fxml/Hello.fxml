<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polpolink.hellopolpofx.controller.HelloController">
	<FlowPane styleClass="flow">
		<children>
			<TextField fx:id="name"></TextField>
			<Button fx:id="hello" onAction="#hello">hello</Button>			
		</children>
	</FlowPane>
	<Label fx:id="message"></Label>
</VBox>