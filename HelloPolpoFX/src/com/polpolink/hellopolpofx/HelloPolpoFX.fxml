<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
	
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polpolink.hellopolpofx.HelloPolpoFXController" styleClass="root">
	<!-- TODO Add Nodes -->
	<children>
		<FlowPane styleClass="flow">
			<children>
				<TextField fx:id="name" alignment="TOP_LEFT"></TextField>
				<Button fx:id="hello" alignment="TOP_RIGHT" onAction="#hello">hello</Button>			
			</children>
		</FlowPane>
		<Label fx:id="message"></Label>
	</children>
</VBox>
